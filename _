cmake_minimum_required(VERSION 3.10)
set(CMAKE_CXX_COMPILER "/usr/bin/g++")

project(test linenoise curlcpp)

find_package(Linenoise REQUIRED)
find_package(Curlcpp REQUIRED)
set(CMAKE_linenoise_COMPILER "/usr/bin/gcc")
set(CMAKE_curlcpp_COMPILER "/usr/bin/gcc")
add_executable(${PROJECT_NAME} test.cpp ${Linenoise_INCLUDE_DIR} ${Curlcpp_INCLUDE_DIR})
target_link_libraries(${PROJECT_NAME} ${Linenoise_LIBRARY} ${Curlcpp_LIBRARY})
